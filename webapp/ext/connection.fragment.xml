<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:macros="sap.fe.macros" controllerName="sap.fe.demo.travelpage.etx.connection">
    <Table id="connectionsTable">
        <headerToolbar>
            <Toolbar id="connectionsListToolbar">
                <Title id="connectionsListTitle" text="Connections"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column id="AirlineId">
                <Text id="AirlineIdText" text="Airline"/>
            </Column>
            <Column id="ConnectionId">
                <Text id="ConnectionText" text="Connection ID"/>
            </Column>
        
            <Column id="DepartureTimeColumn">
                <Text id="DepartureTimeText" text="Departure Time"/>
            </Column>
            <Column id="arrivalColumn">
                <Text id="arrivalTimeText" text="Arrival Time"/>
            </Column>
            <Column id="DepartureAirportColumn">
                <Text id="DepartureAirportText" text="Departure Airport"/>
            </Column>
            <Column id="DestinationAirportColumn">
                <Text id="DestinationAirportText" text="Destination Airport"/>
            </Column>
            <Column id="DistanceColumn">
                <Text id="DistanceText" text="Distance"/>
            </Column>
            
        </columns>
        <items>
            <ColumnListItem id="ConnnectionListItem">
                <cells>
                    <Text id="AirlineIDCellvalue" text="({_Connection/AirlineID})"/>
                    <Text id="ConnectionIdCellValue" text="{_Connection/ConnectionID}"/>
                    <Text id="DepartureTimeCellValue" text="{_Connection/DepartureTime}"/>
                    <Text id="customerNameCellValue" text="{_Connection/ArrivalTime}"/>
                    <Text id="DepartureAirportCellValue" text="{_Connection/DepartureAirport}"/>
                    <Text id="DestinationAirportCellValue" text="{_Connection/DestinationAirport}"/>
                    <Text id="DistanceCellValue" text="{_Connection/Distance} {_Connection/DistanceUnit}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
